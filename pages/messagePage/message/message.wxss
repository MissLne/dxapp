/* pages/messagePage/message/message.wxss */
.parent-nav-class {
  width: 250rpx;
  margin-left: 30rpx;
}
.com-select-box {
  margin-left: 30rpx;
  font-size: 26rpx;
  color: #666;
}
.messageTitle {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.selectContainer {
  width: 690rpx;
  margin: 0 auto 30rpx auto;
  display: flex; 
  justify-content: flex-end;
}
.inputBox {
  box-sizing: border-box;
  width: 750rpx;
  height: 71rpx;
  padding: 0 35rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  left: 0;
  z-index: 99999;
}
.inputBox input {
  width: 520rpx;
  height: 45rpx;
  color: #777;

}
.fakeInput {
  width: 550rpx;
  /* height: 45rpx; */
  background: #f5f5f5;
  border-radius: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.inputBox view:nth-child(2) {
  width: 100rpx;
  height: 45rpx;
  border-radius: 25rpx;
  background: #777BCE;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cover,
.cover2 {
  width: 750rpx;
  height: 100vh;
  position: absolute;
  top: 100rpx;
  left: 0;
  background: rgba(0, 0, 0,0.1);
  z-index: 20;
}
.cover2 {
  top: 0;
  opacity: 0;
}
.massageScrollTop {
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-end;
}
.parent-select-list {
  justify-content: flex-end;
}