.richTextBox {
  width: 690rpx;
  margin: 60rpx auto;
}
.officalTitle,
.richTextTitle {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  margin-bottom: 15rpx;
}
.officalTitle view:nth-child(1)
.richTextTitle view:nth-child(1) {
  font-size: 30rpx;
  color: #333;
}
.richTextTitle view:nth-child(2) {
  margin-left: 140rpx;
  font-size: 22rpx;
  color: #999;
}
.officalTitle view:nth-child(2) {
  margin-left: 140rpx;
  font-size: 22rpx;
  color: #777BCE;
  text-decoration: underline;
}
.inputBox {
  width: 690rpx;
  height: 58rpx;
  border-radius: 29rpx;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 90rpx;
}
.inputBox input {
  width: 640rpx;
  font-size: 26rpx;
}
.richTextContent {
  width: 690rpx;
  height: 600rpx;
  border-radius: 29rpx;
  background: #f5f5f5;
}