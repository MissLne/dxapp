/* pages/activityPage/manage/activityManage/activityManage.wxss */
.parent-nav-class {
  width: 250rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.searchMemberInput {
  width: 750rpx;
  height: 71rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.searchMemberInput input {
  font-size: 28rpx;
  color: #777;
  text-align: center;
  width: 680rpx;
  height: 35rpx;
  border-radius: 25rpx;
  background: #f5f5f5;
}
.payAndIncome {
  font-size: 22rpx;
  color: #333;
  /* margin-top: 40rpx; */
  padding: 0 50rpx;
  width: 750rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.payAndIncome > view:nth-child(1) {
  margin-right: 59rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.parent-pop-up view:nth-child(1){
  background: #FF441A;
  color: #fff;
}
.parent-pop-up view:nth-child(2) {
  border: 1rpx solid #777BCE;
  color: #777BCE;
}
.erweima {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 500rpx;
  height: 800rpx;
  background: #fff;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(0, 0, 0,0.1);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 99999;
}
.theCover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
}
.erweima image {
  width: 200rpx;
  height: 200rpx;
}
.erweima view {
  font-size: 28rpx;
  color: #333;
}