.identifyLogin {
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999999;
  background: rgba(0, 0, 0,0.3);
}
.theCalss {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999999;
  background: rgba(0, 0, 0,0.3);
}
.identifyLogin image {
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
}
.parent-pop-up view:nth-child(1){
  background: #777BCE;
  color: #fff;
}
.parent-pop-up view:nth-child(2) {
  border: 1rpx solid #777BCE;
  color: #777BCE;
}
.identifyLogin view {
  width: 246rpx;
  height: 80rpx;
  border-radius: 36rpx;
  background: #777BCE;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  position: fixed;
  bottom: 316rpx;
  left: 50%;
  transform: translateX(-50%);
}
.addActivityBtn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 40rpx;
}
.addActivityBtn image {
  width: 86rpx;
  height: 86rpx;
}
.nullActText {
  margin-left: 50rpx;
  font-size: 22rpx;
  color: #999;
}
.nullActText text {
  color: #777BCE;
  text-decoration: underline;
}