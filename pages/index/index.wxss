.identifyLogin {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999999;
  background: rgba(0, 0, 0,0.1);
}
.notsroll {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.identifyLogin view {
  width: 246rpx;
  height: 80rpx;
  border-radius: 36rpx;
  background: #777BCE;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  position: absolute;
  bottom: 316rpx;
  left: 50%;
  transform: translateX(-50%);
}
