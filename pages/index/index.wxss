.com-select-box{
  color: #666666;
  position: relative;
}
.theCalss {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99999;
  background: rgba(0, 0, 0,0.3);
}
.parent-pop-up view:nth-child(1){
  background: #777BCE;
  color: #fff;
}
.parent-pop-up view:nth-child(2) {
  border: 1rpx solid #777BCE;
  color: #777BCE;
}

.addActivityBtn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 40rpx;
}
.addActivityBtn image {
  width: 86rpx;
  height: 86rpx;
}
.nullActText {
  margin-left: 50rpx;
  font-size: 22rpx;
  color: #999;
}
.nullActText text {
  color: #777BCE;
  text-decoration: underline;
}
.identifyLogin {
  background: #fff;
  width: 550rpx;
  height: 675rx;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  border-radius: 15rpx;
  z-index: 9999999;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  padding-top: 50rpx;
}
.identifyText {
  font-size: 26rpx;
  color: #777BCE;
  margin: 50rpx 0;
}
.identifyLogin image:nth-of-type(1) {
  width: 180rpx;
  height: 250rpx;
}
.identifyLogin image:nth-of-type(2) {
  margin: 50rpx 0;
  width: 80rpx;
  height: 80rpx;
}
.identifyline {
  width: 500rpx;
  height: 30rpx;
  color: #bbbaba;
  font-size: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.identifyline view:nth-of-type(1),
.identifyline view:nth-of-type(3) {
  height: 15rpx;
  width: 100rpx;
  border-top: 1rpx solid #bbbaba;
}