/* components/teamComponents/teamListItem/teamListItem.wxss */

.teamListItem {
    box-sizing: border-box;
    width: 750rpx;
    height: 200rpx;
    padding: 0 80rpx;
    margin-top: 30rpx;
    border-radius: 15rpx 75rpx 0 75rpx;
    background: #f5f5f5;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.teamListItem image {
    width: 132rpx;
    height: 132rpx;
    border-radius: 20rpx;
}

.teamListName {
    height: 132rpx;
    width: 230rpx;
    font-family: PingFang SC;
    font-weight: bold;
    font-size: 34rpx;
    color: #333;
}

.teamListBtn {
    height: 132rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    text-decoration: underline;
    color: #333333;
}