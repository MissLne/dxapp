/* components/teamComponents/teamsManageItem/teamsManageItem.wxss */

.teamManageItem {
  width: 675rpx;
  height: 190rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.teamManageItem image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 14rpx;
}

.teamManageMaterial {
  width: 350rpx;
  margin-left: 23rpx;
}

.teamManageMaterial view:nth-child(1) {
  font-size: 30rpx;
  color: #333;
  font-family: 'Ping Fang';
  font-weight: 500;
}

.teamManageMaterial view:nth-child(2) {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.green {
  color: #349E69;
}

.red {
  color: #FF441A;
}

.teamManageBtn {
  width: 170rpx;
  height: 60rpx;
  font-size: 24rpx;
  font-family: 'Ping Fang';
  font-weight: 400;
  color: #777BCE;
  border-radius: 12rpx;
  border: 1rpx solid #777BCE;
  display: flex;
  justify-content: center;
  align-items: center;
}