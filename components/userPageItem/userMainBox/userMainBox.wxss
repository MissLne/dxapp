/* components/userPageItem/userMainBox/userMainBox.wxss */
.userMainBox {
  width: 750rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding-top: 180rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 255rpx;
  background: #fff;
}
.baseMaterial {
  display: flex;
  justify-content: center;
  border-bottom: 10rpx solid #f5f5f5;
}
.baseMaterial > view:nth-child(1) {
  border-right: 1rpx solid #f5f5f5;
}
.baseMaterial > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 40rpx;
  width: 250rpx;
  height: 100rpx;
}
.userMainBoxBtn {
  height: 100rpx;
  color: #333;
  font-size: 26rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}
.userMainBoxBtn button {
  position: absolute;
  opacity: 0;
}
.logout {
  width: 690rpx;
  /* font-size: 26rpx;
  color: #FF441A; */
  /* text-decoration: underline; */
  display: flex;
  justify-content: center;
  margin: 240rpx auto 0 auto;
}
.logout view {
  width: 180rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #777BCE;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
}