/* components/userPageItem/userUploadPic/userUploadPic.wxss */
.updateAvatorBox {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 15%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userUploadPic {
  height: 200rpx;
  width: 200rpx;
  margin-bottom: 10rpx;
  border-radius: 14rpx;
  background: #f5f5f5;
  box-shadow: 1rpx 1rpx 5rpx 5rpx rgba(0, 0, 0,0.1);
}
.updateAvatorBtn {
  width: 130rpx;
  height: 50rpx;
  border-radius: 12rpx;
  border: 2rpx solid #777BCE;
  margin-top: 10rpx;
  color: #777BCE;
  font-size: 24rpx;
  font-weight: bold;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}