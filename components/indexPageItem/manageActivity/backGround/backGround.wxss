/* components/indexPageItem/manageActivity/backGround/backGround.wxss */

.actManageBg {
  width: 690rpx;
  height: 280rpx;
  border-radius: 30rpx;
  margin: 20rpx auto;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  clear: both;
  /* background: #483989; */
}

.actManageBg::after {
  content: "";
  width: 120%;
  height: 120%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(255, 255, 255, 0.5);
  z-index: 2;
}

.actManageBg image {
  width: 700rpx;
  height: 290rpx;
  border-radius: 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.actManageBg view:nth-of-type(1) {
  text-align: center;
  width: 600rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 35rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  z-index: 3;
}

.actManageBg view:nth-of-type(2) {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  z-index: 3;
}

.actManageBg view:nth-of-type(3) {
  font-size: 28rpx;
  z-index: 3;
}