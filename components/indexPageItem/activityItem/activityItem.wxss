/* components/indexPageItem/activityItem/activityItem.wxss */
.activity-item {
  width: 100%;
  min-height: 240rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item-img {
  width: 270rpx;
  height: 190rpx;
  border-radius: 14rpx;
}
.item-content {
  width: 350rpx;
  margin: 20rpx 0;
}
.content-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.content-box {
  font-size: 20rpx;
}
.content-box view {
  margin-top: 5rpx;
}
.content-box image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 5rpx;
}
.btn1 {
  /* width: 76rpx; */
  height: 30rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-right: 40rpx;
}
.btn2 {
  font-size: 24rpx;
  width: 90rpx;
  height: 40rpx;
  display: table-cell;
  vertical-align: middle;
  /* display: flex;
  align-items: center; */
  background: #777BCE;
  border-radius: 20rpx;
  color: #fff;
}
.item-btns view {
  display: inline-block;
  text-align: center;
  align-items: center;
}
.item-btns {
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.foot {
  width: 100%;
  height: 10rpx;
  background: rgba(0, 0, 0,0.1);
}
.color-3,
.color2,
.color-2 {
  color: #666666;
}
.color1 {
  color: #349E69;
}
.color-1 {
  color: #FF441A;
}