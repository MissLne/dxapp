<view class="diy">自定义</view>
<view wx:for="{{setUpItem}}" wx:key="index" class="diySelectBox">
  <block wx:for="{{pickMessage.ifRedArr}}" wx:for-item="lala" wx:for-index="lulu">
      <view wx:if="{{index == lala}}" class="theBorder"></view>
    </block>
  <view class="diySelectDelete" bind:tap="deleteBox" data-num="{{index}}">×</view>
  <view wx:if="{{item.pickType == 1}}" class="diySelectPicTitle">图片填写项</view>
  <view class="diySelectTitle" wx:if="{{item.pickType != 1}}">
    <view>标题</view>
    <input wx:if="{{item.pickType == 0}}" placeholder="例：联系方式" value="{{item.property}}" bindinput="changeInput" data-str="property" data-num="{{index}}" />
    <input wx:if="{{item.pickType == 2}}" placeholder="例：你了解到报名的来源" value="{{item.property}}" bindinput="changeInput" data-str="property" data-num="{{index}}" />
  </view>
  <view class="diySelectContent">
    <view wx:if="{{item.pickType == 0}}" class="diySelectFillAndPic">
      <view>提示信息</view>
      <input placeholder="例：请输入联系方式" value="{{item.content}}" bindinput="changeInput" data-str="content" data-num="{{index}}" />
    </view>
    <view wx:if="{{item.pickType == 1}}" class="diySelectFillAndPic">
      <view>标题</view>
      <input placeholder="例：朋友圈集赞图片" bindinput="changeInput" value="{{item.content}}" data-str="content" data-num="{{index}}" />
    </view>
    <view wx:if="{{item.pickType == 2}}" wx:for="{{item.content}}" wx:for-index="num" wx:for-item="sonItem" class="diySelectChoices" wx:key="index">
      <view>
        <view>选项{{num + 1}}</view>
        <input placeholder="例：公众号" value="{{sonItem}}" bindinput="changeSonInput" data-inputindex="{{num}}" data-boxindex="{{index}}" />
      </view>
      <view wx:if="{{item.content.length > 2}}" bind:tap="deleteInput" data-inputindex="{{num}}" data-boxindex="{{index}}">
        -
      </view>
    </view>
  </view>
  <view wx:if="{{item.pickType == 2}}" bindtap="addChoice" data-item="{{index}}" class="addInputBtn">新增选项</view>
  <view class="footerBtn">
    <view>
      <radioBtn radioContent="{{['多选']}}" widthCount="{{80}}" wx:if="{{item.pickType == 2}}" bindtype="checkChange" data-num="{{index}}" radio-parent-class="radio-parent-class"/>
      <radioBtn radioContent="{{['必填']}}" widthCount="{{80}}" bindtype="radioChange" data-num="{{index}}" radio-parent-class="radio-parent-class"/>
    </view>
  </view>
</view>

<view class="pickBtn">
  <!-- <view class="pickBtnContent">{{content}}</view> -->
  <picker class="pickBtnContent" mode="selector" range="{{pickMessage.array}}" bindchange="pickValue">
    {{pickMessage.content}}
  </picker>
</view>