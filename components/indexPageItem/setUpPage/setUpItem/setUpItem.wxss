/* components/indexPageItem/setUpPage/setUpItem/setUpItem.wxss */

.setUpContainer {
  width: 690rpx;
  height: 360rpx;
  margin: 30rpx auto 50rpx auto;
}

.containerTitle {
  width: 690rpx;
  box-sizing: border-box;
  padding: 0 0 20rpx 30rpx;
}

.setUpBox {
  width: 690rpx;
  height: 320rpx;
  box-sizing: border-box;
  padding: 30rpx 60rpx;
  border-radius: 30rpx;
  background: #fff;
}

.setUpItemBox {
  font-size: 26rpx;
  color: #333;
  height: 50rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.setUpItemBox input {
  color: #666;
  font-size: 24rpx;
  width: 350rpx;
}

.tworadio-parent-class {
  width: 350rpx;
  font-size: 24rpx;
}

.diySelectBox {
  width: 690rpx;
  margin: 0 auto;
  box-sizing: border-box;
  border-radius: 30rpx;
  background: #fff;
  padding-left: 40rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.diySelectDelete {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  background: #f5f5f5;
  color: #999;
  text-align: center;
  vertical-align: middle;
}
.diySelectTitle input,
.diySelectFillAndPic input {
  width: 300rpx;
}
.diySelectTitle, .diySelectFillAndPic {
  width: 505rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 4.5rpx 10rpx;
  font-size: 24rpx;
  color: #999;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.diySelectTitle view {
  color: #333;
}

.diySelectPicTitle {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.diySelectChoices {
  margin-top: 17rpx;
  width: 630rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.diySelectChoices>view:nth-child(1) {
  width: 535rpx;
  height: 50rpx;
  padding-left: 30rpx;
  border-radius: 25rpx;
  background: #f5f5f5;
  color: #999;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.diySelectChoices>view:nth-child(2) {
  width: 29rpx;
  height: 29rpx;
  background: #777BCE;
  border-radius: 50%;
  color: #fff;
  vertical-align: middle;
  text-align: center;
}
.addInputBtn {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #777BCE;
  margin-left: 20rpx;
}
.footerBtn {
  width: 535rpx;
  display: flex;
  justify-content: flex-end;
}
.footerBtn > view {
  width: 200rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.radio-parent-class {
  font-size: 22rpx;
}