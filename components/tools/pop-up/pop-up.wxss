/* components/tools/pop-up/pop-up.wxss */
.popUpBox {
  width: 400rpx;
  height: 250rpx;
  border-radius: 30rpx;
  background: #fff;
  box-shadow: 0 0 5rpx 1rpx rgba(0, 0, 0,0.1);
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 99999999;
  display: none;
}
.showPopUp {
  display: block;
}
.popUpClose {
  display: flex;
  justify-content: flex-end;
}
.popUpClose image {
  width: 34.3rpx;
  height: 34.3rpx;
  margin: 10rpx;
}
.popUpContent {
   color: #333333;
   font-size: 26rpx;
   display: flex;
   justify-content: center;
   margin: 30rpx 0;
}
.popUpBtn {
  display: flex;
  justify-content: center;
}
.popUpBtn view {
  margin: 0 10rpx;
  width: 135rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}