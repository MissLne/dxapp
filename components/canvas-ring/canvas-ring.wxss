.circle-bar-wrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 0 20%;
}
.circle-bar-wrap .font1{
  max-height: 62rpx;
  font-size: 20rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  white-space: normal;
  color: #777BCE;
}
.font2 {
  color: #333;
  font-size: 28rpx;
  margin: 5rpx 0;
}
.font3 {
  color: #349E69;
  font-size: 20rpx;
}
.circle-bar-wrap .val{
  margin-top: 20rpx;
  font-size: 50rpx;
  height: 65rpx;
}